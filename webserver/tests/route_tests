import pytest

from webserver import create_app

@pytest.fixture
def app():
    app = create_app()
    app.config.update({
        "TESTING": True,
    })

    yield app

@pytest.fixture
def client(app):
    return app.test_client()

@pytest.fixture
def runner(app):
    return app.test_cli_runner()

def test_index_route(client):
    response = client.get("/")
    assert response.status_code == 200

def test_logging_route(client):
    response = client.post("/logging", data={
        "event": "test_event",
        "data": "test_data",
        "text": "test_text",
    })
    assert response.status_code == 200

def test_suggestions_route_prompt(client):
    response = client.post("/suggestions", data={
        "prompt": "Hello",
    })
    assert response.status_code == 200

def test_suggestions_route_no_prompt(client):
    response = client.post("/suggestions")
    assert response.status_code == 400